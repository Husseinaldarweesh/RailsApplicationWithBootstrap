<p id="notice"><%= notice %></p>

<h1 class="container text-center">Articles</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Body</th>
      <th scope="col">User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.body %></td>
      <td><%= article.user.email %></td>
      <td><%= link_to 'Show', article, class:"btn btn-outline-success" %></td>
      <td><%= link_to 'Edit', edit_article_path(article), class:"btn btn-outline-primary" %></td>
      <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row" style=" margin-left: 500px;">
<%= link_to 'New Article', new_article_path, class:"btn btn-success" %>
</div>