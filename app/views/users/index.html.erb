<p id="notice"><%= notice %></p>

<h1 class="container text-center">Users</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= link_to 'Show', user, class:"btn btn-outline-success" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row" style="  margin-left: 500px;">

<%= link_to 'New User' , new_user_path, class:"btn btn-success"  %>
</div>
